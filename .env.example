# Telegram API credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_with_country_code  # e.g., +1234567890

# Telegram channel username (without @)
CHANNEL_USERNAME=whale_alert

# Database connection string (TimescaleDB/PostgreSQL)
# Format: postgresql://username:password@host:port/database
TIMESCALEDB_URL=postgresql://postgres:postgres@localhost:5432/whale_alert

# OpenAI API Key (required for LLM parsing)
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model Settings
LLM_MODEL=gpt-4o  # or gpt-3.5-turbo for faster/cheaper but less accurate parsing
LLM_TEMPERATURE=0.0  # 0.0 for deterministic output, higher for more creativity

# Application settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# API config
API_KEYS=wha_xxxxxxxx
REQUIRE_AUTH=true
API_KEY_HEADER="X-API-Key"